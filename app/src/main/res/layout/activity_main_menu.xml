<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenuActivity" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:onClick="openGlucoseActivity"
        android:background="@drawable/red_shaped_rectangle"
        android:id="@+id/relativeLayout">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/blood_icon"
            android:src="@drawable/blood_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glucose test"
            android:id="@+id/textView"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="13dp"/>
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="@drawable/orange_shaped_rectangle"
        android:id="@+id/relativeLayout2"
        android:onClick="openFoodActivity">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginRight="40dp"
            android:id="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:src="@drawable/food_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food ingest"
            android:id="@+id/textView2"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout2"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:background="@drawable/green_shaped_rectangle"
        android:id="@+id/relativeLayout3"
        android:onClick="openBolusActivity">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginRight="40dp"
            android:id="@+id/imageView3"
            android:layout_marginLeft="10dp"
            android:src="@drawable/syringe_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolus"
            android:id="@+id/textView3"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout3"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:onClick="openExerciseActivity"
        android:background="@drawable/blue_shaped_rectangle"
        android:id="@+id/relativeLayout4">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginRight="40dp"
            android:id="@+id/imageView4"
            android:layout_marginLeft="10dp"
            android:src="@drawable/run_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physical activity"
            android:id="@+id/textView4"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/relativeLayout4"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:onClick="openDiseaseActivity"
        android:background="@drawable/grey_blue_shaped_rectangle"
        android:id="@+id/relativeLayout5">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginRight="40dp"
            android:id="@+id/imageView5"
            android:layout_marginLeft="10dp"
            android:src="@drawable/health_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease"
            android:id="@+id/textView5"
            android:textSize="22sp"
            android:fontFamily="sans-serif-light"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>

</RelativeLayout>
